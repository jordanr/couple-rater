		<div id='most_rated'>
                <% for couple in @rated[0...5]%>
                        <% fb_list_item do %>
                                <%= fb_couple(couple, :size=>'thumb') %>
				<span class="stats"><%= couple.votes_in_words %></span>
                        <% end %>
		</div>
                <%end%>
             <%end%>
             <%= fb_td_spacer %>
             <% fb_td(:style=>"width:306px;") do %>
		<div id='highest'>
                <% for couple in @highest[0...5] %>
                        <% fb_list_item do %>
                                <%= fb_couple(couple, :size=>'thumb') %>
				<span class="stats"><%= couple.average_in_words %></span>
                        <%end%>
                <% end %>
		</div>
             <%end%>
        <% end %>
        <% fb_tr do %>
             <%=fb_tf(url_for(:controller=>'linking', :action=>'see_all', :order=>"most_rated"), "See all most rated")  %>
             <%=fb_tf_spacer%>
             <%=fb_tf(url_for(:controller=>'linking', :action=>'see_all', :order=>"highest"), "See all highest")  %>
        <% end %>
<%end%>
